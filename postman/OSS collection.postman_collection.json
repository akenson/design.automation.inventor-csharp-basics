{
	"info": {
		"_postman_id": "8ecdd21f-8e35-4254-839c-dbbdb6f9f5d9",
		"name": "OSS collection",
		"schema": "https://schema.getpostman.com/json/collection/v2.0.0/collection.json"
	},
	"item": [
		{
			"name": "Authenticate",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "dfda4926-ac05-4b81-8513-0698a26ba717",
						"type": "text/javascript",
						"exec": [
							"var body = JSON.parse(responseBody);",
							"postman.setGlobalVariable(\"forge_token_oss\", body[\"access_token\"]);"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "client_id",
							"value": "",
							"description": "",
							"type": "text"
						},
						{
							"key": "client_secret",
							"value": "",
							"type": "text"
						},
						{
							"key": "grant_type",
							"value": "client_credentials",
							"type": "text"
						},
						{
							"key": "scope",
							"value": "data:write data:read bucket:create bucket:delete",
							"description": "",
							"type": "text"
						}
					]
				},
				"url": "{{authenticateUrl}}"
			},
			"response": []
		},
		{
			"name": "Create OSS Bucket",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "b8f08e2f-9a04-4e7f-a273-34119fb024cf",
						"type": "text/javascript",
						"exec": [
							"var body = JSON.parse(responseBody);",
							"postman.setGlobalVariable(\"oss_bucket\", body[\"bucketKey\"]);"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{forge_token_oss}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"bucketKey\": \"MyBucketKey\",\n\t\"access\": \"full\",\n\t\"policyKey\": \"temporary\"\n}\n"
				},
				"url": "https://developer.api.autodesk.com/oss/v2/buckets"
			},
			"response": []
		},
		{
			"name": "Delete OSS Bucket",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "87cf6349-8950-428a-ae7a-59a5ff157444",
						"type": "text/javascript",
						"exec": [
							""
						]
					}
				}
			],
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{forge_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": ""
				},
				"url": "https://developer.api.autodesk.com/oss/v2/buckets/farandjtestbucket2"
			},
			"response": []
		},
		{
			"name": "Get OSS temporary upload url",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{forge_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{}"
				},
				"url": {
					"raw": "https://developer.api.autodesk.com/oss/v2/buckets/{{oss_bucket}}/objects/MyObjectName/signed?access=readwrite",
					"protocol": "https",
					"host": [
						"developer",
						"api",
						"autodesk",
						"com"
					],
					"path": [
						"oss",
						"v2",
						"buckets",
						"{{oss_bucket}}",
						"objects",
						"MyObjectName",
						"signed"
					],
					"query": [
						{
							"key": "access",
							"value": "readwrite"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Get OSS temporary download url",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{forge_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{}\n"
				},
				"url": "https://developer.api.autodesk.com/oss/v2/buckets/{{oss_bucket}}/objects/MyObjectName/signed"
			},
			"response": []
		},
		{
			"name": "Upload file to OSS",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{forge_token}}"
					}
				],
				"body": {
					"mode": "file",
					"file": {}
				},
				"url": "https://developer.api.autodesk.com/oss/v2/buckets/{{oss_bucket}}/objects/MyObjectName"
			},
			"response": []
		}
	]
}